@model IEnumerable<TraversalCoreProje.Areas.Admin.Models.BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
    string scoreWord = "";
}

<h1>Booking Hotel Rezervasyon Sayfası</h1>
<h3>Arama Yapılan Şehir:Paris/Fransa</h3>

<table class="table table-bordered">
    <th>#</th>
    <th>Otel Adı</th>
    <th>Otel Puanı</th>
    <th>Otel Değerlendirmesi</th>
    <th>Detaylar</th>

    @foreach (var item in Model)
    {
        count++;
<tr>
    <td>@count</td>
    <td>@item.name</td>
    @{ score = double.Parse(item.reviewScore.ToString()) / 10;}
    <td>@score</td>

    @{
        if (item.reviewScoreWord == "Very Good")
        {
            <td>Çok iyi</td>
        }

        if (item.reviewScoreWord == "Good")
        {
            <td>İyi</td>
        }

        if (item.reviewScoreWord == "Fabulous")
        {
            <td>Harika</td>
        }
    }
    <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
</tr>

    }
</table>