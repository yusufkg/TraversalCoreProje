@using EntityLayer
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Şehir</td>
        <td>Fiyat</td>
        <td>Kapasite</td>
        <td>Sitede Gör</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
     @foreach (var item in Model)
     {
         <tr>
             <td>@item.DestinationID</td>
             <td>@item.City</td>
             <td>@item.Price</td>
             <td>@item.Capacity</td>
             <td><a href="/Destination/Details/@item.DestinationID" class="btn btn-outline-info">Sitede gör</a></td>
             <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-info">Sil</a></td>
             <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-info">Güncelle</a></td>
         </tr>
     }
</table>

<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">Yeni Tur Rotası</a>